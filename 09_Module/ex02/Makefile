#color and formatting:
BOLD =	\033[1m
GREEN =	\033[32m
RED =	\033[31m
NC =	\033[0m

#name
NAME =		PmergeMe

#compilation
CC =		c++
CFLAGS = 	-Wall -Wextra -Werror -std=c++98

#source files
SRC = 		PmergeMe.cpp main.cpp 
all: $(NAME)

$(NAME): 
	@echo "$(BOLD)$(GREEN)[ Compiling ... ]$(NC)"
	@$(CC) $(CFLAGS) $(SRC) -o $(NAME)
	@echo "$(BOLD)$(GREEN)[ ðŸª„ Program ready! ]$(NC)"
	@echo "\n$(BOLD)$(GREEN)[ ðŸ“– Usage ]$(NC)"
	@echo "./PmergeMe <sequence of numbers>"
	@echo "./PmergeMe -test for test mode with 1k, 10k and 100k random numbers\n"


clean:
	@echo "$(BOLD)$(RED)[ ðŸ”¥ Removing program ]$(NC)"
	@rm -f $(NAME)

fclean:
	@echo "$(BOLD)$(RED)[ ðŸ”¥ Removing program ]$(NC)"
	@rm -f $(NAME)

re: fclean all

.PHONY: all re clean fclean